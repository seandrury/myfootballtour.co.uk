        <button class="navbar-toggler collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbarContent" aria-controls="mainNavbarContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon">
        </button>

    </div> #}

    <ul class="d-grid nav-list list-unstyled mb-0">
        <li class="nav-item d-flex align-items-center gap-3 position-relative">
            {% include "_svg/nav-icons/nav-football.svg" %}
            <a class="stretched-link nav-link" href="/">My Football Tour</a>
